<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16.0dip"
    android:layout_marginTop="16.0dip"
    android:layout_marginRight="16.0dip"
    android:layout_marginBottom="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_marginStart="0.0dip"
        android:layout_marginEnd="0.0dip"
        app:cardBackgroundColor="?attr/colorCard"
        app:cardCornerRadius="28.0dip"
        app:cardElevation="0.0dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="fill_parent"
                android:layout_height="250.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginStart="12.0dip"
                android:layout_marginEnd="12.0dip"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="19.0dip"
                app:cardElevation="0.0dip">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uwu_banner_image_about"
                    android:scaleType="centerCrop"
                    android:elevation="0.0dip" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.2" />
                <com.neko.particlesdrawable.ParticlesView
                    android:background="#00000000"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    app:dotColor="?attr/colorPrimary"
                    app:frameDelayMillis="10"
                    app:lineColor="?attr/colorPrimary"
                    app:lineDistance="86.0dip"
                    app:lineThickness="1.0dip"
                    app:maxDotRadius="4.0dip"
                    app:minDotRadius="1.0dip"
                    app:numDots="60"
                    app:stepMultiplier="1.0" />
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:clipToPadding="false"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:layout_marginBottom="16.0dip"
                            android:layout_marginStart="16.0dip"
                            android:layout_marginEnd="5.0dip">
                            <com.neko.circleimageview.CircleImageView
                                android:layout_width="80.0dip"
                                android:layout_height="80.0dip"
                                android:src="@drawable/uwu_banner_profile"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_overlay="true"
                                app:civ_border_width="3.0dip"
                                app:civ_circle_background_color="?attr/colorBg" />
                        </LinearLayout>
                        <RelativeLayout
                            android:paddingTop="16.0dip"
                            android:paddingBottom="16.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:layout_marginStart="5.0dip"
                            android:layout_marginEnd="5.0dip">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                    android:textSize="25.0sp"
                                    android:textColor="@android:color/white"
                                    android:ellipsize="marquee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/uwu_banner_title"
                                    android:singleLine="false" />
                                <com.neko.marquee.text.RandomText
                                    android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                    android:textSize="17.0sp"
                                    android:textColor="@android:color/white"
                                    android:ellipsize="marquee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    uwu_runnable="false" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:layout_marginBottom="12.0dip"
                android:layout_marginStart="12.0dip"
                android:layout_marginEnd="12.0dip"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="19.0dip"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="8.0dip">
                        <LinearLayout
                            android:background="@drawable/uwu_bg_icon"
                            android:layout_width="45.0dip"
                            android:layout_height="45.0dip"
                            android:backgroundTint="?attr/colorIcon">
                            <ImageView
                                android:gravity="center"
                                android:layout_width="25.0dip"
                                android:layout_height="25.0dip"
                                android:layout_marginTop="10.0dip"
                                android:src="@drawable/ic_baseline_color_lens_24"
                                android:tint="?attr/colorPrimary"
                                android:layout_marginStart="10.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:paddingTop="16.0dip"
                        android:paddingBottom="16.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginEnd="5.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                android:textSize="17.0sp"
                                android:textColor="?android:textColorPrimaryInverse"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uwu_banner_theme_title"
                                android:singleLine="false" />
                            <TextView
                                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                                android:textSize="14.0sp"
                                android:textColor="?android:textColorPrimaryInverse"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uwu_banner_theme_summary"
                                android:singleLine="false" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
