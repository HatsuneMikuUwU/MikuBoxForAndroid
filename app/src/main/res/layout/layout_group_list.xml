<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_appbar" />
    <LinearLayout
        android:id="@+id/banner_home"
        android:background="?attr/colorPrimary"
        android:paddingBottom="16.0dip"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0.0dip"
        android:paddingEnd="0.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_marginBottom="0.0dip"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:cardBackgroundColor="?attr/colorCard"
            app:cardCornerRadius="28.0dip"
            app:cardElevation="0.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dip"
                    android:layout_marginTop="12.0dip"
                    android:layout_marginStart="12.0dip"
                    android:layout_marginEnd="12.0dip"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="19.0dip"
                    app:cardElevation="0.0dip">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uwu_banner_home"
                        android:scaleType="centerCrop"
                        android:elevation="0.0dip" />
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="8.0dip">
                        <com.neko.circleimageview.CircleImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:src="@drawable/uwu_banner_profile"
                            app:civ_border_color="?attr/colorPrimary"
                            app:civ_border_overlay="true"
                            app:civ_border_width="3.0dip"
                            app:civ_circle_background_color="@android:color/transparent" />
                    </LinearLayout>
                    <RelativeLayout
                        android:paddingTop="16.0dip"
                        android:paddingBottom="16.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginEnd="5.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                                android:textSize="17.0sp"
                                android:textColor="?attr/colorOnSurface"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uwu_banner_title"
                                android:singleLine="false" />
                            <com.neko.marquee.text.Greetings
                                android:textAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleSmall"
                                android:textSize="14.0sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:ellipsize="marquee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:marqueeRepeatLimit="marquee_forever" />
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:layout_marginBottom="0.0dip"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginEnd="16.0dip">
                        <LinearLayout
                            android:background="@drawable/uwu_bg_icon"
                            android:layout_width="35.0dip"
                            android:layout_height="35.0dip"
                            android:layout_marginStart="10.0dip"
                            android:layout_marginEnd="5.0dip"
                            android:backgroundTint="?attr/colorSecondaryContainer">
                            <ImageView
                                android:gravity="center"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_marginTop="8.0dip"
                                android:src="@drawable/ic_service_active"
                                android:tint="?attr/colorPrimary"
                                android:layout_marginStart="8.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <FrameLayout
        android:background="@drawable/uwu_background_collapse"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.google.android.material.card.MaterialCardView
            android:paddingTop="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="16.0dip"
            app:cardElevation="0.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="-16.0dip"
                android:layout_marginStart="-16.0dip"
                android:layout_marginEnd="-16.0dip">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginHorizontal="16.0dip"
                    app:cardBackgroundColor="?attr/colorCard"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip"
                    app:strokeWidth="0.0dip">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/group_tab"
                        android:background="@android:color/transparent"
                        android:layout_width="fill_parent"
                        android:layout_height="64.0dip"
                        app:tabIndicator="@drawable/uwu_tabs_rounded_indicator"
                        app:tabIndicatorAnimationMode="elastic"
                        app:tabIndicatorColor="?attr/colorPrimary"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorHeight="64.0dip"
                        app:tabMode="scrollable"
                        app:tabPaddingEnd="24.0dip"
                        app:tabPaddingStart="24.0dip"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabSelectedTextAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        app:tabSelectedTextColor="?attr/colorSurface"
                        app:tabTextAppearance="@style/TextAppearance.M3.Sys.Typescale.TitleMedium"
                        app:tabTextColor="?attr/colorOnSurfaceVariant" />
                </com.google.android.material.card.MaterialCardView>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/group_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</LinearLayout>
